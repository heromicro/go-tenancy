  "version": "2.0.0",
  "tasks": [
    {
      "label": "init db",
      "type": "shell",
      "command": "go test -v -run ^TestInitDB$ github.com/snowlyg/go-tenancy/tests"
    },
    {
      "label": "test all",
      "type": "shell",
      "command": "go test -timeout 60s -run [^TestInitDB$] github.com/snowlyg/go-tenancy/tests"
    },
    {
      "label": "build linux",
      "type": "shell",
      "command": "go env -w CGO_ENABLED=0 | go env -w GOOS=linux | go build -ldflags '-w -s' -o ./main main.go | ./upx -9 ./main | go env -w GOOS=windows | go env -w CGO_ENABLED=1"
    },
    {
      "label": "git push gitee",
      "type": "shell",
      "command": "git push gitee master"
    },
    {
      "label": "apidoc",
      "type": "shell",
      "command": " cd resource/doc/ | apidoc -i v1/ -o apidoc/ -t template/"
    }
  ]
}